{
  "manifest_version": 3,
  "name": "Reading time",
  "version": "1.1",
  "description": "Add reading time to WikiHow articles",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://www.wikihow.com/*"]
    }
  ]
}
